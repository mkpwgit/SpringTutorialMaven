<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	                       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="parenttriangle" class="spring.tutorial.maven.Triangle">
        <property name="pointA" ref="pointA"/>
    </bean>

    <bean id="triangle" class="spring.tutorial.maven.Triangle" parent="parenttriangle">
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>

    <bean id="triangle2" class="spring.tutorial.maven.Triangle" parent="parenttriangle">
        <property name="pointB" ref="pointB"/>
    </bean>

    <bean id="pointA" class="spring.tutorial.maven.Point">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointB" class="spring.tutorial.maven.Point">
        <property name="x" value="20"/>
        <property name="y" value="20"/>
    </bean>

    <bean id="pointC" class="spring.tutorial.maven.Point">
        <property name="x" value="-20"/>
        <property name="y" value="-20"/>
    </bean>

</beans>